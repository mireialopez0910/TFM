<Window xmlns="https://github.com/avaloniaui"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:uielement="using:GRASPBuilder.UIElement"
		mc:Ignorable="d" Width="1600" Height="910"
		CanResize="False" WindowStartupLocation="CenterScreen"
		x:Class="GRASP_Builder.Views.MainWindow"
		xmlns:vm="using:GRASP_Builder.ViewModels"
		xmlns:n="using:GRASP_Builder"
		x:DataType="vm:MainWindowViewModel"
		Icon="/Resources/logo.ico"
		Title="{Binding Title}">

	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:MainWindowViewModel/>
	</Design.DataContext>
	<Border>
		<Border.ContextMenu>
			<ContextMenu> 
				<MenuItem Header="Change to small resolution UI" Command="{Binding ChangeToSmallUI}" />
			</ContextMenu>
		</Border.ContextMenu>

		<StackPanel>
			<Grid IsVisible="{Binding IsHomeVisible}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="80"/>
				</Grid.ColumnDefinitions>
			
				<TabControl  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="880" IsVisible="{Binding IsHomeVisible}" Grid.ColumnSpan="2">
					<TabItem Header="Home" >
						<TabItem.Content>
							<n:HomeView />
						</TabItem.Content>
					</TabItem>
				</TabControl>
				
				<Button Click="Help_Click" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.Column="1"  Background="Transparent" BorderBrush="Transparent" FontStyle="Italic" Foreground="DarkBlue" FontWeight="DemiBold" FontSize="10" Width="60">
					<ContentControl>
						<TextBlock Text="Help" HorizontalAlignment="Center"/>
					</ContentControl>
				</Button>

			</Grid>
			
			<Grid IsVisible="{Binding IsProjectLoaded}">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="Auto"/>
				</Grid.ColumnDefinitions>

				<TabControl  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="680" Grid.ColumnSpan="2" Background="Transparent">
					<TabItem Header="Download">
						<TabItem.Content>
							<n:DownloadFiles/>
						</TabItem.Content>
					</TabItem>

					<TabItem Header="Data combination">
						<TabItem.Content>
							<n:DataCombinationView />
						</TabItem.Content>
					</TabItem>

					<TabItem Header="Plotting">
						<TabItem.Content>
							<n:PlotView />
						</TabItem.Content>
					</TabItem>
				</TabControl>

				<Menu HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="1" >
					<MenuItem Header="File">
						<MenuItem Header="Create a new project" Command="{Binding CreateCmd}"/>
						<MenuItem Header="Open an other project" Command="{Binding OpenCmd}"/>
						<MenuItem Header="Import an other project" Command="{Binding ImportCmd}"/>
						<MenuItem Header="Export project" Command="{Binding ExportCmd}"/>
						<MenuItem Header="Close project"  Command="{Binding CloseCmd}"/>
					</MenuItem>
					
					<MenuItem Header="Settings"  Command="{Binding SettingsCmd}"/>
										
					<MenuItem Header="About"  Command="{Binding AboutCmd}"/>
				</Menu>
			</Grid>

			<TabControl IsVisible="{Binding IsProjectLoaded}">
				<TabItem Header="Log" FontSize="18">
					<TabItem.Content >
						<n:LogView Margin="0,5"/>
					</TabItem.Content>
				</TabItem>
			</TabControl>

			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="*"/>
					<ColumnDefinition Width="*"/>
				</Grid.ColumnDefinitions>

				<Image Source="avares://GRASP_Builder/Resources/logo.png" Stretch="Fill" Opacity="1" Margin="1,1,10,-10" Height="25" Width="25"
					   HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" />

				<Image Source="avares://GRASP_Builder/Resources/logo_UPC.png" Stretch="Fill" Opacity="1" Height="25" Width="200" Margin="10,1,1,-7"
					   HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" />
			</Grid>
		</StackPanel>
	</Border>
</Window>
