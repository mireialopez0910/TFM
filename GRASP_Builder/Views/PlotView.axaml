<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:GRASP_Builder.ViewModels"
			 x:DataType="vm:PlotViewModel" HorizontalAlignment="Center"
			 x:Class="GRASP_Builder.PlotView">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:PlotViewModel/>

	</Design.DataContext>
	<StackPanel Orientation="Horizontal">
		
	<StackPanel Margin="0,0,100,0" VerticalAlignment="Center" >
		
			<TextBlock FontWeight="Bold" Text="1. Select a lidar Measure ID" Margin="10,50,0,5"/>

			<StackPanel Orientation="Horizontal" Width="500" Margin="10,5,0,50">
				<Button x:Name="Button_2" Grid.Row="0" Grid.Column="0" Margin="2" ToolTip.Tip="Reload" VerticalAlignment="Center" Tag="buttonReload" Command="{Binding ReloadMeasureIDCmd}">
					<!--Width="31" Height="31"-->
					<TextBlock Text="Reload" VerticalAlignment="Center"/>
					<!--<Image Source="avares://GRASP_Builder/Assets/icon_reset.png" Stretch="Uniform"/>-->
				</Button>

				<ComboBox x:Name="SelectalidermeasurementIDDropDown" VerticalAlignment="Center" Margin="2" ItemsSource="{Binding MeasureIDOptions, Mode=TwoWay}" SelectedItem="{Binding SelectedMeasureID, Mode=TwoWay}" Width="420"/>
			</StackPanel>

		<TextBlock FontWeight="Bold" Text="2. Select a measurement file to show" Margin="10,21,0,5" Grid.Column="2"/>

			<StackPanel Orientation="Horizontal" Margin="10,5,0,50">

				<ComboBox x:Name="SelectFileToShowComboBox" Margin="2" ItemsSource="{Binding FileToShowOptions, Mode=TwoWay}" SelectedItem="{Binding SelectedFileToShow, Mode=TwoWay}"
						  Width="385" Height="31"/>

				<Button x:Name="SavefiguresButton" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Right" Margin="2" Command="{Binding SaveFiguresCmd}">
					<TextBlock Text="Save figures" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Button>
			</StackPanel>
		<Border Background="#F3F3F3" CornerRadius="2" Padding="10" Height="130" Margin="0,10" Width="500">
			<StackPanel>
				<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Top" Spacing="8">
					<StackPanel Margin="0,0,20,0">
						<TextBlock FontWeight="Bold" Text="3. Select a figure to show" Margin="0,5,0,10"/>
						<StackPanel Orientation="Horizontal" Spacing="6">
							<!--<Image Source="avares://GRASP_Builder/Assets/icon-info.png" Width="16" Height="16" Stretch="Uniform"/>-->
							<ComboBox x:Name="SelectFigureToShow" Width="385" ItemsSource="{Binding FigureToShowOptions, Mode=TwoWay}" SelectedItem="{Binding SelectedFigureToShow, Mode=TwoWay}"/>
							<Button x:Name="PlotfigureButton" Command="{Binding PlotFigureCmd}" HorizontalAlignment="Left">
								<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<!--<Image Source="avares://GRASP_Builder/Assets/icon-graph.png" Width="16" Height="16" Stretch="Uniform"/>-->
									<TextBlock Text="Plot figure" VerticalAlignment="Center"/>
								</StackPanel>
							</Button>

						</StackPanel>
					</StackPanel>

				</StackPanel>

				<TextBlock TextWrapping="Wrap" VerticalAlignment="Top" FontSize="12" Margin="0,10,0,0" Text="If there is no figure available to show, check selected Measure ID and measurement file to show and make sure to save figures first."/>
			</StackPanel>


		</Border>

		</StackPanel>

		<TabControl>
				<TabItem Header="Output" FontSize="16">
					<ScrollViewer VerticalScrollBarVisibility="Auto">
						<TextBox x:Name="OutputWindow"
								 IsReadOnly="True"
								 AcceptsReturn="True"
								 TextWrapping="Wrap"
								 Width=" 550" Height="550"/>
					</ScrollViewer>
				</TabItem>

				<TabItem Header="Errors" FontSize="16">
					<ScrollViewer VerticalScrollBarVisibility="Auto">
						<TextBox x:Name="ErrorsWindow"
								 IsReadOnly="True"
								 AcceptsReturn="True"
								 TextWrapping="Wrap"
								 Width=" 550" Height="550"/>
					</ScrollViewer>
				</TabItem>
			</TabControl>
	</StackPanel>
</UserControl>
