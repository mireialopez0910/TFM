<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:vm="using:GRASP_Builder.ViewModels"
			 x:DataType="vm:PlotViewModel"
			 x:Class="GRASP_Builder.PlotView">
	<Design.DataContext>
		<!-- This only sets the DataContext for the previewer in an IDE,
		to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
		<vm:PlotViewModel/>

	</Design.DataContext>
	<StackPanel Margin="12">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="10"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>

			<Grid.RowDefinitions>
				<RowDefinition Height="*"/>
				<RowDefinition Height="10"/>
				<RowDefinition Height="*"/>
			</Grid.RowDefinitions>

			<TextBlock FontWeight="Bold" Text="1. Select a lider measurement ID" Margin="0"/>

			<StackPanel Orientation="Horizontal" Grid.Row="2">
				<Button x:Name="Button_2" Grid.Row="0" Grid.Column="0" Margin="2" ToolTip.Tip="Reload" VerticalAlignment="Center" Tag="buttonReload">
					<!--Width="31" Height="31"-->
					<TextBlock Text="Reload" VerticalAlignment="Center"/>
					<!--<Image Source="avares://GRASP_Builder/Assets/icon_reset.png" Stretch="Uniform"/>-->
				</Button>

				<ComboBox x:Name="SelectalidermeasurementIDDropDown" VerticalAlignment="Center" Margin="2"
						  MinWidth="300" Height="31"/>
			</StackPanel>

			<TextBlock FontWeight="Bold" Text="2. Select a measurement file to show" Margin="0" Grid.Column="2"/>

			<StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2">

				<ComboBox x:Name="SelectameasurementfiletoshowDropDown_2" Margin="2"
						  Width="320" Height="31"/>

				<Button x:Name="SavefiguresButton" Grid.Row="0" Grid.Column="2" Width="109" Height="31" Background="#129EDF" Foreground="White" HorizontalAlignment="Right" Margin="2">
					<TextBlock Text="Save figures" HorizontalAlignment="Center" VerticalAlignment="Center"/>
				</Button>
			</StackPanel>
		</Grid>

		<Border Background="#E6E6E6" CornerRadius="2" Padding="12" Height="120" Margin="0,10">
			<StackPanel>
				<StackPanel Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Horizontal" VerticalAlignment="Top" Spacing="8">
					<StackPanel Margin="0,0,8,0">
						<TextBlock FontWeight="Bold" Text="3. Select a figure to show" Margin="0,0,0,6"/>
						<StackPanel Orientation="Horizontal" Spacing="6">
							<!--<Image Source="avares://GRASP_Builder/Assets/icon-info.png" Width="16" Height="16" Stretch="Uniform"/>-->
							<ComboBox x:Name="SelectafiguretoshowDropDown" MinWidth="403"/>
							<Button x:Name="PlotfigureButton"
									IsEnabled="False" HorizontalAlignment="Left">
								<StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
									<!--<Image Source="avares://GRASP_Builder/Assets/icon-graph.png" Width="16" Height="16" Stretch="Uniform"/>-->
									<TextBlock Text="Plot figure" VerticalAlignment="Center"/>
								</StackPanel>
							</Button>

							<Button x:Name="Button" Tag="buttonReload">
								<!--Width="31" Height="31"-->
								<!--<Image Source="avares://GRASP_Builder/Assets/icon_broom.png" Stretch="Uniform"/>-->
								<TextBlock Text="Clean" VerticalAlignment="Center"/>
							</Button>
						</StackPanel>
					</StackPanel>

				</StackPanel>

				<TextBlock TextWrapping="Wrap" VerticalAlignment="Top" Margin="0,10,0,0" Text="Use the broom to clear the visor. If any figure is available to show, check your Measure ID and configurations and save figures first."/>
			</StackPanel>


		</Border>

		<!-- Row 3: figure selection + plot button + broom -->

	</StackPanel>
</UserControl>
